<div id="unique-profile-section">
    <main>
        <h2>Redigera din personliga information</h2>
        <section class="profile-info">
            <label for="name">Namn:</label>
            <input type="text" id="name" />

            <label for="phone">Telefonnummer:</label>
            <input type="text" id="phone" />

            <label for="email">Email:</label>
            <input type="email" id="email" />

            <label for="address">Adress</label>
            <input type="text" id="address" />

            <label for="profile-picture">Profilbild</label>
            <button id="profile-picture">Ladda Upp</button>

            <label for="password">Lösenord</label>
            <input type="password" id="password" />
        </section>

        <section class="cv">
            <h3>Redigera ditt cv</h3>
            <textarea placeholder="Kompetenser"></textarea>
            <textarea placeholder="Erfarenhet:"></textarea>
            <textarea placeholder="Utbildning"></textarea>
            <textarea placeholder="Projekt"></textarea>
        </section>

        <section class="projects">
            <h3>Mina skapade projekt</h3>
            <label for="project-name">Namn</label>
            <input type="text" id="project-name" />

            <label for="project-description">Beskrivning:</label>
            <textarea id="project-description"></textarea>
        </section>

        <button type="submit">Spara</button>
    </main>
</div>
